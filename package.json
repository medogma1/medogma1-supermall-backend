{
  "name": "supermall-backend",
  "version": "1.0.0",
  "description": "Backend services for SuperMall application",
  "main": "index.js",
  "scripts": {
    "setup-db": "node utils/setup-database.js",
    "start": "start-all.bat",
    "start:all": "node start-all.js",
    "start:services": "node start-services.js",
    "start:core": "node start-services.js api-gateway auth-service user-service product-service",
    "start:shop": "node start-services.js api-gateway auth-service product-service order-service vendor-service",
    "start:api": "cd api-gateway && npm start",
    "start:auth": "cd auth-service && npm start",
    "start:user": "cd user-service && npm start",
    "start:product": "cd product-service && npm start",
    "start:order": "cd order-service && npm start",
    "start:vendor": "cd vendor-service && npm start",
    "start:support": "cd support-service && npm start",
    "start:chat": "cd chat-service && npm start",
    "start:notification": "cd notification-service && npm start",
    "start:upload": "cd upload-service && npm start",
    "start:analytics": "cd analytics-service && npm start",
    "install:all": "npm install && for /d %i in (*-service api-gateway) do cd %i && npm install && cd ..",
    "install:all:linux": "npm install && find . -maxdepth 1 -type d -name '*-service' -o -name 'api-gateway' | xargs -I{} bash -c 'cd {} && npm install'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:vendor": "jest vendor-service/tests/",
    "test:auth": "jest --testNamePattern=\"Authentication\"",
    "test:validation": "jest --testNamePattern=\"Validation\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "diagnose": "copy utils\\scripts\\diagnose.bat . && diagnose.bat",
    "reinstall": "copy utils\\scripts\\reinstall-dependencies.bat . && reinstall-dependencies.bat",
    "generate-tokens": "node vendor-service/test-auth.js",
    "test-endpoint": "node vendor-service/test-complete-request.js",
    "health": "curl http://localhost:3000/health"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-http-proxy": "^2.1.1",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "fs": "^0.0.1-security",
    "http-proxy-middleware": "^0.21.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.2",
    "path": "^0.12.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "nodemailer": "^6.9.4",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^30.0.4",
    "jest-environment-node": "^29.6.4",
    "@types/jest": "^29.5.4",
    "supertest": "^6.3.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "Super Mall Team",
  "license": "ISC"
}
