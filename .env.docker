# متغيرات البيئة لتشغيل المشروع باستخدام Docker

# المتغيرات المشتركة بين جميع الخدمات
NODE_ENV=production
JWT_SECRET=supermall_secret_key_2024_docker
JWT_EXPIRATION=90d
JWT_COOKIE_EXPIRES_IN=90

# إعدادات قاعدة البيانات
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=supermall_user
MYSQL_PASSWORD=supermall_password
MYSQL_DATABASE=supermall
MYSQL_ROOT_PASSWORD=supermall_root_password

# إعدادات Redis
REDIS_HOST=redis
REDIS_PORT=6379

# منافذ الخدمات (للتعرض الخارجي)
API_GATEWAY_PORT=5001
AUTH_SERVICE_PORT=5000
USER_SERVICE_PORT=5002
PRODUCT_SERVICE_PORT=5003
ORDER_SERVICE_PORT=5004
VENDOR_SERVICE_PORT=5005
SUPPORT_SERVICE_PORT=5006
CHAT_SERVICE_PORT=5007
NOTIFICATION_SERVICE_PORT=5008
UPLOAD_SERVICE_PORT=5009
ANALYTICS_SERVICE_PORT=5010

# عناوين الخدمات (للاتصال الداخلي)
API_GATEWAY_URL=http://api-gateway:5001
AUTH_SERVICE_URL=http://auth-service:5000
USER_SERVICE_URL=http://user-service:5002
PRODUCT_SERVICE_URL=http://product-service:5003
ORDER_SERVICE_URL=http://order-service:5004
VENDOR_SERVICE_URL=http://vendor-service:5005
SUPPORT_SERVICE_URL=http://support-service:5006
CHAT_SERVICE_URL=http://chat-service:5007
NOTIFICATION_SERVICE_URL=http://notification-service:5008
UPLOAD_SERVICE_URL=http://upload-service:5009
ANALYTICS_SERVICE_URL=http://analytics-service:5010

# إعدادات البريد الإلكتروني
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@example.com

# إعدادات التخزين
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=5242880

# إعدادات الدفع
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret