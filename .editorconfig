# EditorConfig هو تنسيق لتوحيد أسلوب الترميز
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 4